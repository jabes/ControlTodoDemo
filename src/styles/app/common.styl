html, body
  margin 0
  padding 0
  width 100%
  height 100%

html
  box-sizing border-box

*,
*::before,
*::after
  box-sizing inherit

h1, h2, h3, h4, h5, h6
  font-weight bold
  text-transform uppercase

h1
  font-size em-calc(36px)

h2
  font-size em-calc(32px)

h3
  font-size em-calc(26px)

h4
  font-size em-calc(22px)

h5
  font-size em-calc(20px)

h6
  font-size em-calc(18px)

p
  color inherit
  font-size em-calc(16px)
  font-family inherit
  font-weight normal
  margin-top 1.5em
  margin-bottom 1.5em

a
  color inherit
  text-decoration none
  &:hover,
  &:active
    text-decoration underline

img
  user-select none

svg
  fill currentColor

.svg-container
  display block
  svg
    display block
    overflow visible
    width 100%
    height 100%

.aspect-ratio-1-1
  padding-bottom percentage(1 / 1)

.aspect-ratio-4-3
  padding-bottom percentage(3 / 4)

.aspect-ratio-16-9
  padding-bottom percentage(9 / 16)

.clear-fix:after
  content ''
  display table
  clear both

[v-cloak]
  display none
