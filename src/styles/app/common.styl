html, body
  margin 0
  padding 0
  width 100%
  height 100%

html
  box-sizing border-box

*,
*::before,
*::after
  box-sizing inherit

body
  background-color $color-white
  color $color-grey-darker
  font-family $font-family-roboto

h1, h2, h3, h4, h5, h6
  font-weight bold
  text-transform uppercase

h1
  font-size em-calc(36px)

h2
  font-size em-calc(32px)

h3
  font-size em-calc(26px)

h4
  font-size em-calc(22px)

h5
  font-size em-calc(20px)

h6
  font-size em-calc(18px)

p
  color inherit
  font-size em-calc(16px)
  font-family inherit
  font-weight normal
  margin-top 1.5em
  margin-bottom 1.5em

a
  color inherit
  text-decoration none
  &:hover,
  &:active
    text-decoration underline

img
  user-select none

.btn
  display inline-block
  padding-top .75rem
  padding-bottom .75rem
  padding-left 1rem
  padding-right 1rem
  border none
  border-radius 3px
  font-weight bold
  text-align center
  text-decoration none
  text-transform uppercase
  color inherit
  background none
  user-select none
  cursor pointer
  &:active
    transform translateY(1px)
  &.primary,
  &.secondary
    &:focus
      box-shadow 0 0 4px 1px rgba($color-black, .5)
      outline none
  &.primary
    &[disabled]
      color $color-grey !important
      background $color-grey-lighter !important
      pointer-events none
    &.black
      color $color-white
      background $color-black
      &:hover
        color $color-white
        background $color-grey
    &.white
      color $color-grey
      background $color-white
      &:hover
        color $color-black
        background $color-white
  &.secondary
    &[disabled]
      color $color-grey-light !important
      border-color $color-grey-light !important
      pointer-events none
    &.black
      color $color-black
      border 2px solid $color-black
      &:hover
        color $color-white
        background $color-black
    &.white
      color $color-white
      border 2px solid $color-white
      &:hover
        color $color-black
        background $color-white

.svg-container
  display block
  svg
    fill currentColor
    display block
    overflow visible
    width 100%
    height 100%

.aspect-ratio-1-1
  padding-bottom percentage(1 / 1)

.aspect-ratio-4-3
  padding-bottom percentage(3 / 4)

.aspect-ratio-16-9
  padding-bottom percentage(9 / 16)

.clear-fix:after
  content ''
  display table
  clear both

[v-cloak]
  display none
