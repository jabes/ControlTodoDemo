for $i in 0..10
  $size = $i * 10
  .index-{$size}
    z-index $size
  .index-neg-{$size}
    z-index $size * -1

$position = static absolute fixed relative
for $value in $position
  .{$value}
    position $value

for $i in 0..10
  $key = $i
  $value = $i * 10
  if $value is not 0
    $value = convert-unit($value, '%')
  .top-{$key}
    top $value
  .bottom-{$key}
    bottom $value
  .left-{$key}
    left $value
  .right-{$key}
    right $value

